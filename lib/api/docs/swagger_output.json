{
    "openapi": "3.0.0",
    "info": {
      "title": "Marvel Characters API",
      "description" : "Documentation for the APIs of my website: AFSE (Album delle Figurine dei Super Eroi)",
      "version": "1.0.0"
    },
    "host": "localhost:666",
    "basePath": "/",
    "tags": [
      {
        "name": "fetch",
        "description": "Endpoints for fetching and searching content."
      }
    ],
    "servers": [
      {
        "url": "http://localhost:666",
        "description": "Development server"
      }
    ],
    "paths": {
      "/": {
        "get": {
          "summary": "Get Marvel characters",
          "description": "Retrieves a list of Marvel characters",
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/CharacterResponse"
                  }
                }
              }
            },
            "500": {
              "description": "Server error"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "CharacterResponse": {
          "type": "object",
          "properties": {
            "code": {
              "type": "integer",
              "example": 200
            },
            "data": {
              "type": "object",
              "properties": {
                "results": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Character"
                  }
                }
              }
            }
          }
        },
        "Character": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "thumbnail": {
              "type": "object",
              "properties": {
                "path": {
                  "type": "string"
                },
                "extension": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }